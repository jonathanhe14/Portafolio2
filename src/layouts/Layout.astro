  * {
  box-sizing: border-box;
}
* {
  margin: 0;
  padding: 0;
}
 
	html, body {
	min-height: 100vh;
  height: 100%; 
  margin: 0;  /* Elimina márgenes por defecto */
  box-sizing: border-box; 
}
html {
  margin: 0; /* Asegura que no haya márgenes en el body */
  font-family: Montserrat, sans-serif;
  font-weight: 500;
  font-style: normal;
  background: linear-gradient(90deg, #1f2d35, #1d2b37);
  background-size: cover;
}
  p {
	font-family: "Roboto";
  }
  h1 {
    font-family: "Bebas Neue", sans-serif;
    font-weight: 200;
    font-style: normal;
    font-size: 6rem;
    letter-spacing: 0.2em;
  }
  h2,
  h3 {
    font-family: "Bebas Neue", sans-serif;
    font-weight: 100;
    font-style: normal;
    font-size: 3rem;
    letter-spacing: 0.2em;
  }
  code {
    font-family:
	
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  #image-container img {
  width: 100%; /* Ajusta el tamaño según prefieras */
  filter: sepia(100%) brightness(92%) hue-rotate(45deg) saturate(147%) contrast(89%);; /* Aplica el filtro verde claro */
  transition: filter 0.2s ease-in-out;
}

#image-container img:hover {
  filter: none; /* Vuelve a la imagen original en hover */
}
#svg-icon {
  transition: all 0.3s ease;
}

#svg-icon:hover {
   /* Cambia el color de relleno */
  stroke: #DBFF79; /* Cambia el color del borde */
  transform: translateY(-4px); /* Eleva el icono */
  cursor: pointer;
}
</style>
